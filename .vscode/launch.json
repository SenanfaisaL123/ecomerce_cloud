{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Backend",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/backend/src/index.js",
        "runtimeExecutable": "node",
        "envFile": "${workspaceFolder}/backend/.env"
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Frontend",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend"
      }
    ]
  }